@model LicenseWatch.Web.Models.Admin.OptimizationOverviewViewModel
@using LicenseWatch.Web.Security
@inject IPermissionService PermissionService
@{
    ViewData["Title"] = "Optimization";
    var canManage = await PermissionService.HasPermissionAsync(User, PermissionKeys.OptimizationManage);
    var headerModel = new PageHeaderViewModel
    {
        Title = "Optimization center",
        Subtitle = "Identify savings opportunities from license usage.",
        Actions = @<text>
            <form asp-action="Run" method="post" class="d-flex flex-wrap gap-2 align-items-center" id="run-optimization">
                @Html.AntiForgeryToken()
                <select class="form-select" name="windowDays">
                    <option value="30">Last 30 days</option>
                    <option value="60">Last 60 days</option>
                    <option value="90">Last 90 days</option>
                </select>
                <button class="btn btn-primary lw-btn" type="submit" data-loading-text="Running analysis..." @(canManage ? "" : "disabled")>
                    <i class="bi bi-lightning-charge me-1"></i>Run analysis
                </button>
            </form>
        </text>
    };
}

<div class="fade-up">
    <partial name="_PageHeader" model="headerModel" />
</div>

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle shadow-sm border-0" data-toast="true">
        <div>@Model.AlertMessage</div>
        @if (!string.IsNullOrWhiteSpace(Model.AlertDetails))
        {
            <details class="lw-details mt-2">
                <summary>Details</summary>
                <div class="small text-muted mt-1">@Model.AlertDetails</div>
            </details>
        }
    </div>
}

<div class="row g-3 mb-4">
    <div class="col-md-3"><div class="metric-tile"><div class="text-muted small">Active insights</div><div class="h5 fw-semibold mb-0">@Model.ActiveInsights</div></div></div>
    <div class="col-md-3"><div class="metric-tile"><div class="text-muted small">Critical</div><div class="h5 fw-semibold mb-0">@Model.CriticalInsights</div></div></div>
    <div class="col-md-3"><div class="metric-tile"><div class="text-muted small">Est. annual savings</div><div class="h5 fw-semibold mb-0">@(Model.EstimatedAnnualSavings.HasValue ? $"USD {Model.EstimatedAnnualSavings.Value:N0}" : "-")</div></div></div>
    <div class="col-md-3"><div class="metric-tile"><div class="text-muted small">Open recommendations</div><div class="h5 fw-semibold mb-0">@Model.RecommendationsOpen</div></div></div>
</div>

<form method="get" class="card lw-card shadow-sm border-0 mb-4">
    <div class="card-body lw-card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label text-muted small">Severity</label>
                <select class="form-select" name="severity">
                    <option value="">All</option>
                    <option value="Critical" selected="@(Model.Severity == "Critical")">Critical</option>
                    <option value="Warning" selected="@(Model.Severity == "Warning")">Warning</option>
                    <option value="Info" selected="@(Model.Severity == "Info")">Info</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Type</label>
                <input class="form-control" name="key" value="@Model.Key" placeholder="UnderutilizedSeats" />
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Category</label>
                <select class="form-select" name="categoryId">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Status</label>
                <select class="form-select" name="status">
                    <option value="">All</option>
                    <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                    <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                </select>
            </div>
        </div>
        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-primary" type="submit"><i class="bi bi-filter me-1"></i>Apply</button>
            <a class="btn btn-outline-secondary" href="/admin/optimization">Reset</a>
        </div>
    </div>
</form>

<div class="card lw-card shadow-sm border-0">
    <div class="card-body lw-card-body">
        @if (!Model.Insights.Any())
        {
            var emptyState = new EmptyStateViewModel
            {
                Icon = "bi-lightbulb",
                Title = "No optimization insights yet",
                Message = "Run a fresh analysis to surface underutilized or unassigned seat opportunities.",
                PrimaryCta = new CtaViewModel
                {
                    Label = "Run analysis",
                    Url = "#run-optimization",
                    Icon = "bi-lightning-charge"
                },
                SecondaryCta = new CtaViewModel
                {
                    Label = "View licenses",
                    Url = "/admin/licenses",
                    Icon = "bi-file-earmark-check"
                }
            };
            <partial name="_EmptyState" model="emptyState" />
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Insight</th>
                            <th>Severity</th>
                            <th>License</th>
                            <th>Evidence</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var insight in Model.Insights)
                        {
                            <tr>
                                <td class="fw-semibold">@insight.Title</td>
                                <td><span class="badge @SeverityBadge(insight.Severity)">@insight.Severity</span></td>
                                <td>@(insight.LicenseName ?? "-")</td>
                                <td class="text-secondary">@insight.EvidenceSummary</td>
                                <td><span class="badge @(insight.IsActive ? "bg-success-subtle text-success" : "bg-light text-muted border")">@(insight.IsActive ? "Active" : "Inactive")</span></td>
                                <td class="text-end">
                                    @if (canManage)
                                    {
                                        <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Recommendations" asp-action="Create" asp-route-insightId="@insight.Id">Create recommendation</a>
                                        <form asp-action="Dismiss" asp-route-id="@insight.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-sm btn-outline-secondary" type="submit">Dismiss</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" type="button" disabled title="You do not have permission to manage optimization.">Create recommendation</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@functions {
    private static string SeverityBadge(string severity)
        => severity switch
        {
            "Critical" => "bg-danger-subtle text-danger",
            "Warning" => "bg-warning-subtle text-warning",
            _ => "bg-primary-subtle text-primary"
        };
}


