@model LicenseWatch.Web.Models.Admin.RecommendationDetailViewModel
@using LicenseWatch.Web.Security
@inject IPermissionService PermissionService
@{
    ViewData["Title"] = "Recommendation";
    var canManage = await PermissionService.HasPermissionAsync(User, PermissionKeys.OptimizationManage);
    var savingsDisplay = Model.EstimatedAnnualSavings.HasValue
        ? $"{Model.Currency} {Model.EstimatedAnnualSavings.Value:N0} / yr"
        : "Savings unavailable";
    var headerModel = new PageHeaderViewModel
    {
        Title = Model.Title,
        Subtitle = "Track progress and keep savings initiatives on course.",
        Actions = @<text>
            <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Recommendations" asp-action="Index">Back to list</a>
            @if (canManage)
            {
                <a class="btn btn-primary lw-btn" asp-area="Admin" asp-controller="Recommendations" asp-action="Edit" asp-route-id="@Model.Id">Edit recommendation</a>
            }
            else
            {
                <button class="btn btn-primary lw-btn" type="button" disabled title="You do not have permission to manage recommendations.">Edit recommendation</button>
            }
        </text>
    };
}

<partial name="_PageHeader" model="headerModel" />

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle" data-toast="true" role="alert">@Model.AlertMessage</div>
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card lw-card p-4 mb-4">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <span class="badge @StatusBadge(Model.Status)">@Model.Status</span>
                    <h4 class="mt-3">Recommendation summary</h4>
                    <p class="text-muted">@Model.Description</p>
                </div>
                <div class="text-end">
                    <div class="text-muted small">Estimated annual savings</div>
                    <div class="display-6 fw-semibold">@savingsDisplay</div>
                </div>
            </div>
        </div>

        <div class="card lw-card p-4 mb-4">
            <h5>Linked resources</h5>
            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <div class="border rounded-3 p-3 h-100">
                        <div class="text-muted small">License</div>
                        @if (Model.LicenseId.HasValue)
                        {
                            <a class="fw-semibold text-decoration-none" asp-area="Admin" asp-controller="Licenses" asp-action="Details" asp-route-id="@Model.LicenseId">@Model.LicenseName</a>
                        }
                        else
                        {
                            <div class="fw-semibold">Unassigned</div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="border rounded-3 p-3 h-100">
                        <div class="text-muted small">Insight</div>
                        @if (Model.OptimizationInsightId.HasValue)
                        {
                            <div class="fw-semibold">@Model.InsightTitle</div>
                            <div class="small text-muted">@Model.InsightEvidenceSummary</div>
                        }
                        else
                        {
                            <div class="fw-semibold">Manual recommendation</div>
                            <div class="small text-muted">Not linked to a live insight.</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card lw-card p-4">
            <h5>Status updates</h5>
            <p class="text-muted">Move this recommendation through your workflow as actions are completed.</p>
            <form asp-area="Admin" asp-controller="Recommendations" asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Current status</label>
                    <select name="status" class="form-select" @(canManage ? "" : "disabled")>
                        @foreach (var option in new[] { "Open", "InProgress", "Done", "Dismissed" })
                        {
                            <option value="@option" selected="@(string.Equals(option, Model.Status, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@option</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary" @(canManage ? "" : "disabled")>Update status</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card lw-card p-4 mb-4">
            <h5>Timeline</h5>
            <div class="small text-muted">Created</div>
            <div class="fw-semibold">@Model.CreatedAtUtc.ToString("MMM dd, yyyy")</div>
            <div class="small text-muted mt-3">Last updated</div>
            <div class="fw-semibold">@Model.UpdatedAtUtc.ToString("MMM dd, yyyy")</div>
        </div>
        <div class="card lw-card p-4">
            <h5>Notes for operators</h5>
            <p class="text-muted">Always confirm contract terms before resizing seat counts or cancelling vendors.</p>
            <ul class="list-unstyled small text-muted mb-0">
                <li class="mb-2"><i class="bi bi-check-circle-fill text-accent me-2"></i>Coordinate with procurement</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-accent me-2"></i>Validate usage evidence window</li>
                <li><i class="bi bi-check-circle-fill text-accent me-2"></i>Log decision rationale in audit trail</li>
            </ul>
        </div>
    </div>
</div>

@functions {
    private static string StatusBadge(string status)
    {
        return status switch
        {
            "Open" => "bg-primary-subtle text-primary",
            "InProgress" => "bg-info-subtle text-info",
            "Done" => "bg-success-subtle text-success",
            "Dismissed" => "bg-light text-muted border",
            _ => "bg-light text-muted border"
        };
    }
}


