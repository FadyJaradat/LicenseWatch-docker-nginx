@model LicenseWatch.Web.Models.Admin.ComplianceReportViewModel
@{
    ViewData["Title"] = "Compliance";
    var results = Model.Results;
    var exportCsvUrl = Url.Action("ComplianceExport", "Reports", new { area = "Admin", status = Model.Status, severity = Model.Severity, rule = Model.Rule, format = "csv" });
    var exportExcelUrl = Url.Action("ComplianceExport", "Reports", new { area = "Admin", status = Model.Status, severity = Model.Severity, rule = Model.Rule, format = "excel" });
    var headerModel = new PageHeaderViewModel
    {
        Title = "Compliance violations",
        Subtitle = "Track open and resolved compliance risks.",
        Actions = @<text>
            <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Reports" asp-action="Index">All reports</a>
            <div class="btn-group">
                <button class="btn btn-primary lw-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Export</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@exportCsvUrl">Export CSV</a></li>
                    <li><a class="dropdown-item" href="@exportExcelUrl">Export Excel</a></li>
                </ul>
            </div>
        </text>
    };
}

<partial name="_PageHeader" model="headerModel" />

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle" data-toast="true" role="alert">@Model.AlertMessage</div>
}

<div class="card lw-card p-4 mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">All</option>
                @foreach (var option in Model.StatusOptions)
                {
                    <option value="@option" selected="@(string.Equals(option, Model.Status, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@option</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Severity</label>
            <select class="form-select" name="severity">
                <option value="">All</option>
                @foreach (var option in Model.SeverityOptions)
                {
                    <option value="@option" selected="@(string.Equals(option, Model.Severity, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@option</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Rule</label>
            <select class="form-select" name="rule">
                <option value="">All</option>
                @foreach (var option in Model.RuleOptions)
                {
                    <option value="@option" selected="@(string.Equals(option, Model.Rule, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@option</option>
                }
            </select>
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-primary lw-btn">Apply</button>
            <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Reports" asp-action="Compliance">Reset</a>
        </div>
        <div class="col-12 text-muted small">Last refreshed @Model.LastRefreshedUtc.ToString("g")</div>
    </form>
</div>

<div class="card lw-card p-4 mb-4">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
        <div>
            <h5 class="mb-1">Saved presets</h5>
            <div class="text-muted small">Reuse filters for recurring reports.</div>
        </div>
        <form asp-area="Admin" asp-controller="Reports" asp-action="SavePreset" method="post" class="d-flex flex-wrap gap-2" id="compliance-presets">
            <input type="hidden" name="ReportKey" value="Compliance" />
            <input type="hidden" name="Status" value="@Model.Status" />
            <input type="hidden" name="Severity" value="@Model.Severity" />
            <input type="hidden" name="Rule" value="@Model.Rule" />
            <input class="form-control" name="Name" placeholder="Preset name" />
            <button type="submit" class="btn btn-outline-primary lw-btn">Save preset</button>
        </form>
    </div>
    @if (Model.Presets.Count == 0)
    {
        <div class="lw-empty-inline">
            <span class="lw-empty-inline__icon"><i class="bi bi-bookmark-star"></i></span>
            <div class="text-muted small">No presets yet. Save the current filters for quick reuse.</div>
            <a class="btn btn-sm btn-outline-secondary lw-btn" href="#compliance-presets">Save preset</a>
        </div>
    }
    else
    {
        <div class="d-flex flex-wrap gap-2">
            @foreach (var preset in Model.Presets)
            {
                <a class="badge text-bg-light border" asp-area="Admin" asp-controller="Reports" asp-action="ApplyPreset" asp-route-id="@preset.Id">@preset.Name</a>
            }
        </div>
    }
</div>

<div class="card lw-card p-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h5 class="mb-0">Results</h5>
        <div class="text-muted small">Total @results?.TotalCount</div>
    </div>
    @if (results is null || results.Items.Count == 0)
    {
        var emptyState = new EmptyStateViewModel
        {
            Icon = "bi-shield-check",
            Title = "No compliance records to show",
            Message = "Refine the filters or run a compliance evaluation to generate results.",
            PrimaryCta = new CtaViewModel
            {
                Label = "Reset filters",
                Url = "/admin/reports/compliance",
                Icon = "bi-arrow-counterclockwise"
            },
            SecondaryCta = new CtaViewModel
            {
                Label = "Run evaluation",
                Url = "/admin/compliance",
                Icon = "bi-play-circle"
            }
        };
        <partial name="_EmptyState" model="emptyState" />
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Severity</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Detected</th>
                        <th>Rule</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in results.Items)
                    {
                        <tr>
                            <td><span class="badge @SeverityBadge(row.Severity)">@row.Severity</span></td>
                            <td class="fw-semibold">@row.Title</td>
                            <td>@row.Status</td>
                            <td>@row.DetectedAtUtc.ToString("yyyy-MM-dd")</td>
                            <td>@row.RuleKey</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (results is not null && results.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination">
        @for (var pageNumber = 1; pageNumber <= results.TotalPages; pageNumber++)
        {
            <li class="page-item @(pageNumber == results.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("Compliance", "Reports", new { area = "Admin", page = pageNumber, status = Model.Status, severity = Model.Severity, rule = Model.Rule })">@pageNumber</a>
            </li>
        }
            </ul>
        </nav>
    }
</div>

@functions {
    private static string SeverityBadge(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-danger-subtle text-danger",
            "Warning" => "bg-warning-subtle text-warning",
            "Info" => "bg-info-subtle text-info",
            _ => "bg-light text-muted border"
        };
    }
}


