@model LicenseWatch.Web.Models.Admin.UsageReportViewModel
@{
    ViewData["Title"] = "Usage summary";
    var results = Model.Results;
    var exportCsvUrl = Url.Action("UsageExport", "Reports", new { area = "Admin", categoryId = Model.CategoryId, licenseId = Model.LicenseId, from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd"), format = "csv" });
    var exportExcelUrl = Url.Action("UsageExport", "Reports", new { area = "Admin", categoryId = Model.CategoryId, licenseId = Model.LicenseId, from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd"), format = "excel" });
    var headerModel = new PageHeaderViewModel
    {
        Title = "Usage summary",
        Subtitle = "Track usage peaks and averages by license.",
        Actions = @<text>
            <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Reports" asp-action="Index">All reports</a>
            <div class="btn-group">
                <button class="btn btn-primary lw-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Export</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@exportCsvUrl">Export CSV</a></li>
                    <li><a class="dropdown-item" href="@exportExcelUrl">Export Excel</a></li>
                </ul>
            </div>
        </text>
    };
}

<partial name="_PageHeader" model="headerModel" />

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle" data-toast="true" role="alert">@Model.AlertMessage</div>
}

<div class="card lw-card p-4 mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Category</label>
            <select class="form-select" name="categoryId">
                <option value="">All categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id ? "selected" : null)">@category.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">License</label>
            <select class="form-select" name="licenseId">
                <option value="">All licenses</option>
                @foreach (var license in Model.Licenses)
                {
                    <option value="@license.Id" selected="@(Model.LicenseId == license.Id ? "selected" : null)">@license.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="from" value="@Model.From?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="to" value="@Model.To?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-12 d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary lw-btn">Apply filters</button>
            <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Reports" asp-action="Usage">Reset</a>
            <span class="text-muted small align-self-center">Last refreshed @Model.LastRefreshedUtc.ToString("g")</span>
        </div>
    </form>
</div>

<div class="card lw-card p-4 mb-4">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
        <div>
            <h5 class="mb-1">Saved presets</h5>
            <div class="text-muted small">Reuse filters for recurring reports.</div>
        </div>
        <form asp-area="Admin" asp-controller="Reports" asp-action="SavePreset" method="post" class="d-flex flex-wrap gap-2" id="usage-presets">
            <input type="hidden" name="ReportKey" value="Usage" />
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <input type="hidden" name="LicenseId" value="@Model.LicenseId" />
            <input type="hidden" name="From" value="@Model.From?.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="To" value="@Model.To?.ToString("yyyy-MM-dd")" />
            <input class="form-control" name="Name" placeholder="Preset name" />
            <button type="submit" class="btn btn-outline-primary lw-btn">Save preset</button>
        </form>
    </div>
    @if (Model.Presets.Count == 0)
    {
        <div class="lw-empty-inline">
            <span class="lw-empty-inline__icon"><i class="bi bi-bookmark-star"></i></span>
            <div class="text-muted small">No presets yet. Save the current window for quick access later.</div>
            <a class="btn btn-sm btn-outline-secondary lw-btn" href="#usage-presets">Save preset</a>
        </div>
    }
    else
    {
        <div class="d-flex flex-wrap gap-2">
            @foreach (var preset in Model.Presets)
            {
                <a class="badge text-bg-light border" asp-area="Admin" asp-controller="Reports" asp-action="ApplyPreset" asp-route-id="@preset.Id">@preset.Name</a>
            }
        </div>
    }
</div>

<div class="card lw-card p-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h5 class="mb-0">Results</h5>
        <div class="text-muted small">Total @results?.TotalCount</div>
    </div>
    @if (results is null || results.Items.Count == 0)
    {
        var emptyState = new EmptyStateViewModel
        {
            Icon = "bi-graph-up",
            Title = "No usage data matches",
            Message = "Adjust the date range or select a different category to surface usage signals.",
            PrimaryCta = new CtaViewModel
            {
                Label = "Reset filters",
                Url = "/admin/reports/usage",
                Icon = "bi-arrow-counterclockwise"
            },
            SecondaryCta = new CtaViewModel
            {
                Label = "View licenses",
                Url = "/admin/licenses",
                Icon = "bi-file-earmark-check"
            }
        };
        <partial name="_EmptyState" model="emptyState" />
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>License</th>
                        <th>Category</th>
                        <th>Peak</th>
                        <th>Average</th>
                        <th>Events</th>
                        <th>Period</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in results.Items)
                    {
                        <tr>
                            <td class="fw-semibold">@row.LicenseName</td>
                            <td>@row.CategoryName</td>
                            <td>@row.PeakSeatsUsed</td>
                            <td>@row.AvgSeatsUsed.ToString("0.0")</td>
                            <td>@row.EventsCount</td>
                            <td>@row.PeriodStart.ToString("yyyy-MM-dd") to @row.PeriodEnd.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (results is not null && results.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination">
        @for (var pageNumber = 1; pageNumber <= results.TotalPages; pageNumber++)
        {
            <li class="page-item @(pageNumber == results.Page ? "active" : "")">
                <a class="page-link" href="@Url.Action("Usage", "Reports", new { area = "Admin", page = pageNumber, categoryId = Model.CategoryId, licenseId = Model.LicenseId, from = Model.From?.ToString("yyyy-MM-dd"), to = Model.To?.ToString("yyyy-MM-dd") })">@pageNumber</a>
            </li>
        }
            </ul>
        </nav>
    }
</div>


