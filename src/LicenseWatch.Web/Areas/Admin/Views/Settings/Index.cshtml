@model LicenseWatch.Web.Models.Admin.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
    var headerModel = new PageHeaderViewModel
    {
        Title = "Bootstrap settings",
        Subtitle = "Store secure, encrypted configuration for the platform.",
        UpdatedLabel = $"Environment: {Model.EnvironmentName}"
    };
}

<partial name="_PageHeader" model="headerModel" />

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle" data-toast="true" role="alert">
        <div>@Model.AlertMessage</div>
        @if (!string.IsNullOrWhiteSpace(Model.AlertDetails))
        {
            <details class="lw-details mt-2">
                <summary>Details</summary>
                <pre class="small mb-0">@Model.AlertDetails</pre>
            </details>
        }
    </div>
}

<div class="card lw-card p-4 mb-4">
    <form asp-area="Admin" asp-controller="Settings" asp-action="Save" method="post" enctype="multipart/form-data">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Input.AppName" class="form-label">App name</label>
                <input asp-for="Input.AppName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Input.EnvironmentLabel" class="form-label">Environment label</label>
                <input asp-for="Input.EnvironmentLabel" class="form-control" placeholder="Ex: Staging" />
            </div>
            <div class="col-md-6">
                <label asp-for="Input.CompanyName" class="form-label">Company display name</label>
                <input asp-for="Input.CompanyName" class="form-control" placeholder="Ex: FMJ Holdings" />
                <div class="form-text">Shown in the app header and report exports.</div>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.LogoFile" class="form-label">Company logo</label>
                <input asp-for="Input.LogoFile" type="file" class="form-control" accept="image/*" />
                <div class="form-text">Upload a square logo for best results (PNG/SVG).</div>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.BrandingLogoUrl))
            {
                <div class="col-12">
                    <div class="d-flex align-items-center gap-3 p-3 border rounded bg-light">
                        <img src="@Model.BrandingLogoUrl" alt="Current logo" class="lw-logo lw-logo--lg" />
                        <div>
                            <div class="fw-semibold">Current logo</div>
                            <div class="text-muted small">Upload a new file to replace it.</div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-12">
                <label asp-for="Input.AppDbConnectionString" class="form-label">App DB connection string</label>
                <input asp-for="Input.AppDbConnectionString" class="form-control" placeholder="Leave blank to use appsettings" />
                <div class="form-text">Stored encrypted at rest inside App_Data/bootstrap.json.</div>
            </div>
            <div class="col-12">
                <label asp-for="Input.Notes" class="form-label">Notes</label>
                <textarea asp-for="Input.Notes" class="form-control" rows="3" placeholder="Add helpful context for other operators."></textarea>
            </div>
            <div class="col-12">
                <div class="p-3 border rounded bg-light">
                    <div class="fw-semibold mb-2">Compliance severity thresholds</div>
                    <div class="text-muted small mb-3">System-wide days before expiry that determine critical and warning statuses.</div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.ComplianceCriticalDays" class="form-label">Critical days</label>
                            <input asp-for="Input.ComplianceCriticalDays" class="form-control" type="number" min="1" />
                            <div class="form-text">Licenses expiring within this window are marked Critical.</div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.ComplianceWarningDays" class="form-label">Warning days</label>
                            <input asp-for="Input.ComplianceWarningDays" class="form-control" type="number" min="1" />
                            <div class="form-text">Warning window must be greater than critical days.</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="p-3 border rounded bg-light">
                    <div class="fw-semibold mb-2">Audit retention policy</div>
                    <div class="text-muted small mb-3">Automatically purge audit history older than the selected window.</div>
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label asp-for="Input.AuditRetentionDays" class="form-label">Retention window</label>
                            <select asp-for="Input.AuditRetentionDays" class="form-select">
                                <option value="30">30 days</option>
                                <option value="90">90 days</option>
                                <option value="180">180 days</option>
                                <option value="365">365 days</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <div class="form-text">Cleanup runs via scheduled job and logs the action.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap gap-2 mt-4">
            <button type="submit" class="btn btn-primary lw-btn" data-loading-text="Saving...">Save settings</button>
            <button type="submit" class="btn btn-outline-secondary lw-btn" formaction="/admin/settings/test-connection" data-loading-text="Testing...">Test App DB connection</button>
        </div>
    </form>
</div>

<div class="card lw-card p-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-1">Effective connection string</h5>
            <div class="text-muted small">Used by Test Connection if no override is set.</div>
        </div>
        <span class="badge text-bg-light border">@Model.LastSavedUtc?.ToString("g")</span>
    </div>
    <div class="mt-3">
        <code class="d-block text-muted">@Model.EffectiveAppDbConnectionString</code>
    </div>
</div>


