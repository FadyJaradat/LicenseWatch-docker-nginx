@model LicenseWatch.Web.Models.Admin.UsersListViewModel
@using LicenseWatch.Web.Security
@inject IPermissionService PermissionService
@{
    ViewData["Title"] = "Users";
    var totalPages = Model.PageSize > 0 ? (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize) : 1;
    var canManage = await PermissionService.HasPermissionAsync(User, PermissionKeys.UsersManage);
    var headerModel = new PageHeaderViewModel
    {
        Title = "Users",
        Subtitle = "Create, manage, and secure local accounts.",
        Actions = @<text>
            @if (canManage)
            {
                <a class="btn btn-primary lw-btn" asp-area="Admin" asp-controller="Users" asp-action="Create">Create user</a>
            }
            else
            {
                <button class="btn btn-primary lw-btn" type="button" disabled title="You do not have permission to manage users.">Create user</button>
            }
        </text>
    };
}

<partial name="_PageHeader" model="headerModel" />

@if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
{
    <div class="alert alert-@Model.AlertStyle" data-toast="true" role="alert">@Model.AlertMessage</div>
}

<div class="lw-page-fill d-flex flex-column gap-4">
    <div class="card lw-card p-4">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input class="form-control" name="search" value="@Model.Search" placeholder="Search by email or username" />
            </div>
            <div class="col-md-6 d-flex gap-2">
                <button type="submit" class="btn btn-primary lw-btn">Search</button>
                <a class="btn btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Users" asp-action="Index">Reset</a>
            </div>
        </form>
    </div>

    <div class="card lw-card p-4 flex-grow-1">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h5 class="mb-0">Users</h5>
            <span class="text-muted small">@Model.TotalCount total</span>
        </div>
        @if (Model.Users.Count == 0)
        {
            var emptyState = new EmptyStateViewModel
            {
                Icon = "bi-people",
                Title = "No users yet",
                Message = "Create the first account to grant access to the platform.",
                PrimaryCta = new CtaViewModel
                {
                    Label = "Create user",
                    Url = canManage ? "/admin/users/create" : "/admin/roles",
                    Icon = "bi-person-plus"
                },
                SecondaryCta = new CtaViewModel
                {
                    Label = "Review roles",
                    Url = "/admin/roles",
                    Icon = "bi-award"
                }
            };
            <partial name="_EmptyState" model="emptyState" />
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Last login</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            var modalId = $"delete-user-{user.Id}";
                            <tr>
                                <td class="fw-semibold">@user.Email</td>
                                <td>@(user.Roles.Count == 0 ? "None" : string.Join(", ", user.Roles))</td>
                                <td>
                                    <span class="badge @(user.IsLocked ? "bg-danger-subtle text-danger" : "bg-success-subtle text-success")">@(user.IsLocked ? "Locked" : "Active")</span>
                                </td>
                                <td class="text-muted">@user.LastLoginDisplay</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary lw-btn" asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">View</a>
                                    @if (canManage && user.CanDelete)
                                    {
                                        <button class="btn btn-sm btn-outline-danger lw-btn ms-1" type="button" data-bs-toggle="modal" data-bs-target="#@modalId">Delete</button>
                                        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId-label" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="@modalId-label">Delete user</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        This will permanently delete <strong>@user.Email</strong>. This action cannot be undone.
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-light lw-btn" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger lw-btn" data-loading-text="Deleting...">Delete user</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else if (canManage)
                                    {
                                        <button class="btn btn-sm btn-outline-danger lw-btn ms-1" type="button" disabled title="@user.DeleteDisabledReason">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (totalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination">
            @for (var pageNumber = 1; pageNumber <= totalPages; pageNumber++)
            {
                <li class="page-item @(pageNumber == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Users", new { area = "Admin", page = pageNumber, pageSize = Model.PageSize, search = Model.Search })">@pageNumber</a>
                </li>
            }
                </ul>
            </nav>
        }
    </div>
</div>
