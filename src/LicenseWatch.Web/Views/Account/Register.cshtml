@model LicenseWatch.Web.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    var registerCard = new SectionCardViewModel
    {
        Title = "Create your account",
        Subtitle = "Set up a secure login for LicenseWatch.",
        Body = @<text>
            <form asp-action="Register" method="post" class="mt-3">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <div class="form-text">Use at least 12 characters with a mix of letters, numbers, and symbols.</div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create account</button>
                    <a class="btn btn-outline-secondary" asp-action="Login">Back to sign in</a>
                </div>
            </form>
        </text>
    };
}

<div class="auth-card fade-up">
    <div class="text-center mb-3">
        <partial name="_Logo" model="@("lw-logo--lg")" />
    </div>
    <partial name="_SectionCard" model="registerCard" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
