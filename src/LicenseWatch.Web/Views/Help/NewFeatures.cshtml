@model LicenseWatch.Web.Models.Help.ReleaseNotesViewModel
@{
    ViewData["Title"] = "New features";
    var headerModel = new PageHeaderViewModel
    {
        Title = "New features",
        Subtitle = "Release highlights and operational changes."
    };
}

<div class="fade-up">
    <partial name="_PageHeader" model="headerModel" />
</div>

<div class="row g-4">
    @foreach (var version in Model.Versions)
    {
        <div class="col-12">
            <div class="card lw-card shadow-sm border-0">
                <div class="card-body lw-card-body">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
                        <div>
                            <div class="d-flex align-items-center gap-2">
                                <h2 class="h5 fw-semibold mb-0">@version.Version</h2>
                                @if (version.IsCurrent)
                                {
                                    <span class="badge bg-success-subtle text-success border">Current</span>
                                }
                            </div>
                            <div class="text-muted small">@version.Title</div>
                        </div>
                        <span class="text-muted small">@version.DateLabel</span>
                    </div>

                    <div class="row g-3">
                        @foreach (var releaseSection in version.Sections)
                        {
                            <div class="col-lg-4">
                                <div class="p-3 border rounded-3 h-100">
                                    <div class="fw-semibold mb-2">@releaseSection.Title</div>
                                    <ul class="list-unstyled mb-0 small text-muted">
                                        @foreach (var item in releaseSection.Items)
                                        {
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle text-accent me-2"></i>@item
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
